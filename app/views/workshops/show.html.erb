<div class="col-lg-8 mt-4">
  <div class="card shadow mb-3">
   <div  class="card-body">
   	<h4 class="card-title"><%= @workshop.name %></h4>
   	<div class="row mt-3">
   		<div class="col-lg-7">
   			<h4><span class="badge bg-primary"><%= @workshop.total_duration%></span></h4>
            <h4><span class="badge bg-primary"><%= @workshop.daily_duration %></span></h4>
   		</div>
   		<div class="col-lg-5">
   			<h4>Total Sits: <span class="bad bg-primary"><%= @workshop.total_sits %></span></h4>
   			<h4>Remaining Sits: <span class="bad bg-primary"><%= @workshop.remaining_sits %></span></h4>
   			<h4>Registration Fee: <span class="bad bg-primary"><%= @workshop.registration_fee %></span></h4>
   		</div>
   	</div>
   	<p class="lead mt-3 mb-3"><%= @workshop.description %></p>
   	<%= link_to "Back to Workshop", workshops_path, class: "btn btn-outline-danger btn-lg mt-3" %>
   </div>
 </div>	
</div>
<div class="col-lg-4 mt-4">
	<div class="crad-shadow mb-3">
		<div class="card-body">
			<h4 class="card-title mb-2">Reserve Your Sit Now !</h4>
			<%= form_with url: "#", data:{turbo: false}  do |form| %>
			  <%= form.hidden_field :workshop_id, value: @workshop.id %>
			  <div class="from-group">
			  	<%= form.label :full_name, class: "mb-2 mt-2" %>
			  	<%= form.text_field :full_name, class: "form-control", require: true %>
			  </div>
			  <div class="from-group">
			  	<%= form.label :email, class: "mb-2 mt-2" %>
			  	<%= form.text_field :email_id, class: "form-control", require: true %>
			  </div>
			  <div class="from-group">
			  	<%= form.label :contact_number, class: "mb-2 mt-2" %>
			  	<%= form.text_field :contact_number, class: "form-control", require: true %>
			  </div>
			  <div class="from-group">
			  	<%= form.label :no_of_sits_you_want_to_book, class: "mb-2 mt-2" %>
			  	<%= form.number_field :no_of_tickets, class: "form-control", require: true, min: 1, max: @workshop.remaining_sits %>
			  </div>

			  <!-- Card Deatils block -->
			  <h4 class="mt-4 mb-3" >Card Deatils </h4>
			  <hr>
			   <div class="from-group">
			  	<%= form.label :card_number, class: "mb-2 mt-2" %>
			  	<%= form.text_field :card_number, class: "form-control", require: true %>
			  </div>
              <div class="row">
              	<div class="col-lg-4">
              		<div class="from-group">
					  	<%= form.label :month, class: "mb-2 mt-2" %>
					  	<%= form.number_field :exp_Month, class: "form-control", require: true, min: 1, max: 12 %>
			  		</div>
              	</div>
              	<div class="col-lg-4">
              		<div class="from-group">
					  	<%= form.label :year, class: "mb-2 mt-2" %>
					  	<%= form.number_field :exp_year, class: "form-control", require: true, min: 2022, max: 2030 %>
			  		</div>
              	</div>
              	<div class="col-lg-4">
              		<div class="from-group">
					  	<%= form.label :cvv_number, class: "mb-2 mt-2" %>
					  	<%= form.text_field :cvv, class: "form-control", require: true, maxlength: 4 %>
			  		</div>
              	</div>
              </div>
              <div class="d-grid gap-2">
              	<%= form.submit "Book Your Tickets Now ", class: "btn btn-outline-danger btn-lg mt-3"%>
              </div>
          <%end%>
		</div>
	</div>
</div>